@model Personal_Blog.Models.ArticleViewModel

@{
    ViewData["Title"] = "Add Article";
}

<div class="container mt-5">
    <h2>Add New Article</h2>

    <form asp-action="Add" asp-controller="Admin" method="post">
        <div class="form-group mt-3">
            <label asp-for="heading" class="form-label">Heading</label>
            <input asp-for="heading" class="form-control" placeholder="Enter article title" />
            <span asp-validation-for="heading" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="date" class="form-label">Date</label>
            <input asp-for="date" type="date" class="form-control" />
            <span asp-validation-for="date" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="content" class="form-label">Content</label>
            <textarea asp-for="content" class="form-control" rows="10" placeholder="Write your full article..."></textarea>
            <span asp-validation-for="content" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-4">Publish Article</button>
        <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary mt-4 ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
