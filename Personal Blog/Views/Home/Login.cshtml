@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<form method="post" asp-controller="Admin" asp-action="Dashboard" class="form-signin">
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-danger">
            @ViewBag.Message
        </div>
    }

    <h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>

    <div class="form-group">
        <label asp-for="username" class="sr-only">Username</label>
        <input asp-for="username" class="form-control" placeholder="Username" required autofocus />
    </div>

    <div class="form-group mt-3">
        <label asp-for="password" class="sr-only">Password</label>
        <input asp-for="password" type="password" class="form-control" placeholder="Password" required />
    </div>

    <div class="text-center mt-4">
        <button class="btn btn-primary" type="submit">Log In</button>
    </div>
</form>
