@model LoginViewModel
@{
	ViewBag["Title"] = "Login";

}

 <form method="post"  class="form-signin" asp-controller="Home" asp-action="Login">​
                  @if (!String.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-danger">
            @ViewBag.Message
    </div>
    }
        
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label asp-for="username" class="sr-only">Username</label>
        <input asp-for="username" class="form-control" placeholder="Username" required autofocus>
        <label asp-for="password" class="sr-only">Password</label>
        <input asp-for="password" type="password"  class="form-control" placeholder="Password" required>
        
       
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
       
    </form>

